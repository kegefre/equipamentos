<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
	http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

	<changeSet id="1" author="Kellis">
		<preConditions onFail="MARK_RAN"
			onFailMessage="Já existe a tabela equipamentos">
			<not>
				<tableExists tableName="equipamentos" />
			</not>
		</preConditions>
		<createTable tableName="equipamentos">
			<column name="id" type="int">
				<constraints nullable="false" primaryKey="true"
					primaryKeyName="pk_equipamentos" />
			</column>
			<column name="equipamento" type="${alfanum}">
				<constraints nullable="false" />
			</column>
			<column name="quantidade" type="${numerico}">
				<constraints nullable="false" />
			</column>
			<column name="disponiveis" type="${numerico}">
				<constraints nullable="false" />
			</column>						
		</createTable>
		<addAutoIncrement tableName="equipamentos"
			columnName="id" columnDataType="int" incrementBy="1" startWith="1" />
	</changeSet>

	<changeSet id="2" author="Kellis">
		<preConditions onFail="MARK_RAN"
			onFailMessage="Já existe a tabela usuarios">
			<not>
				<tableExists tableName="usuarios" />
			</not>
		</preConditions>
		<createTable tableName="usuarios">
			<column name="id" type="int">
				<constraints nullable="false" primaryKey="true"
					primaryKeyName="pk_usuarios" />
			</column>
			<column name="usuario" type="${alfanum}">
				<constraints nullable="false" />
			</column>
		</createTable>
		<addAutoIncrement tableName="usuarios"
			columnName="id" columnDataType="int" incrementBy="1" startWith="1" />
	</changeSet>

	<changeSet id="3" author="Kellis">
		<preConditions onFail="MARK_RAN"
			onFailMessage="Já existe a tabela registros">
			<not>
				<tableExists tableName="registros" />
			</not>
		</preConditions>
		<createTable tableName="registros">
			<column name="id" type="int">
				<constraints nullable="false" primaryKey="true"
					primaryKeyName="pk_registros" />
			</column>
			<column name="equip_id" type="${numerico}">
				<constraints nullable="false" />
			</column>
			<column name="usuario_id" type="${numerico}">
				<constraints nullable="false" />
			</column>
			<column name="data_s" type="${data}">
				<constraints nullable="false" />
			</column>
			<column name="data_e" type="${data}">
				<constraints nullable="false" />
			</column>
			<column name="situacao" type="${numerico}">
				<constraints nullable="false" />
			</column>
		</createTable>
		<addAutoIncrement tableName="registros"
			columnName="id" columnDataType="int" incrementBy="1" startWith="1" />
	</changeSet>
</databaseChangeLog>